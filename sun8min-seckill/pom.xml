<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.sun8min</groupId>
		<artifactId>sun8min</artifactId>
		<version>1.0.0</version>
	</parent>

	<groupId>com.sun8min.seckill</groupId>
	<artifactId>sun8min-seckill</artifactId>
	<version>1.0.0</version>

	<dependencies>
		<!-- user-api -->
		<dependency>
			<groupId>com.sun8min.user</groupId>
			<artifactId>user-api</artifactId>
			<version>1.0.0</version>
		</dependency>
		<!-- shop-api -->
		<dependency>
			<groupId>com.sun8min.shop</groupId>
			<artifactId>shop-api</artifactId>
			<version>1.0.0</version>
		</dependency>
		<!-- capital-api -->
		<dependency>
			<groupId>com.sun8min.capital</groupId>
			<artifactId>capital-api</artifactId>
			<version>1.0.0</version>
		</dependency>
		<!-- redpacket-api -->
		<dependency>
			<groupId>com.sun8min.redpacket</groupId>
			<artifactId>redpacket-api</artifactId>
			<version>1.0.0</version>
		</dependency>
		<!-- order-api -->
		<dependency>
			<groupId>com.sun8min.order</groupId>
			<artifactId>order-api</artifactId>
			<version>1.0.0</version>
		</dependency>

		<!-- base-web -->
		<dependency>
			<groupId>com.sun8min.base</groupId>
			<artifactId>base-web</artifactId>
			<version>1.0.0</version>
		</dependency>

		<!-- thymeleaf -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-thymeleaf</artifactId>
		</dependency>

		<!-- springboot devtools -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-devtools</artifactId>
			<!-- 在执行时需要使用 -->
			<scope>runtime</scope>
			<!-- 在当前项目被依赖时，此依赖可选。即不传递 -->
			<optional>true</optional>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>8</source>
					<target>8</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
